{
  "name": "Notion",
  "service_id": "notion",
  "description": "Official Notion MCP server for managing pages, databases (data sources), blocks, and content in Notion workspaces",
  "source": "https://github.com/makenotion/notion-mcp-server",
  "package": {
    "type": "npm",
    "name": "@notionhq/notion-mcp-server",
    "command": "npx",
    "args": ["-y", "@notionhq/notion-mcp-server"]
  },
  "auth": {
    "type": "token",
    "env_vars": ["NOTION_TOKEN"],
    "setup_url": "https://www.notion.so/profile/integrations",
    "setup_instructions": "Create an internal integration at https://www.notion.so/profile/integrations and connect it to your pages via the Access tab or page connections",
    "guide": {
      "steps": [
        "Go to https://www.notion.so/profile/integrations",
        "Click 'New integration'",
        "Name it (e.g., 'OnsetLab Agent')",
        "Select the workspace to connect",
        "Copy the 'Internal Integration Secret' (starts with 'secret_')",
        "Go to pages you want the agent to access",
        "Click '...' → 'Connections' → Add your integration"
      ],
      "notes": "Integration only sees pages it's explicitly connected to. Add connection to parent pages for recursive access."
    }
  },
  "tools": [
    {
      "name": "notion-search",
      "description": "Search across your Notion workspace and connected tools like Slack, Google Drive, and Jira (requires Notion AI)",
      "keywords": ["search", "find", "discover", "query"],
      "parameters": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Text to search for across workspace"
          },
          "filter": {
            "type": "object",
            "description": "Optional filter by type (page or data_source)",
            "properties": {
              "value": {
                "type": "string",
                "enum": ["page", "data_source"]
              },
              "property": {
                "type": "string",
                "enum": ["object"]
              }
            }
          }
        },
        "required": ["query"]
      },
      "required_params": ["query"]
    },
    {
      "name": "notion-fetch",
      "description": "Retrieves content from a Notion page or database by its URL",
      "keywords": ["get", "retrieve", "fetch", "content"],
      "parameters": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "description": "Notion page or database URL"
          }
        },
        "required": ["url"]
      },
      "required_params": ["url"]
    },
    {
      "name": "notion-create-pages",
      "description": "Creates one or more Notion pages with specified properties and content",
      "keywords": ["create", "new", "add", "page"],
      "parameters": {
        "type": "object",
        "properties": {
          "pages": {
            "type": "array",
            "description": "Array of page objects to create",
            "items": {
              "type": "object",
              "properties": {
                "parent": {
                  "type": "object",
                  "description": "Parent page or database ID"
                },
                "properties": {
                  "type": "object",
                  "description": "Page properties (title, etc.)"
                },
                "children": {
                  "type": "array",
                  "description": "Initial blocks/content for the page"
                }
              }
            }
          }
        },
        "required": ["pages"]
      },
      "required_params": ["pages"]
    },
    {
      "name": "notion-update-page",
      "description": "Update a Notion page's properties or content",
      "keywords": ["update", "edit", "modify", "change"],
      "parameters": {
        "type": "object",
        "properties": {
          "page_id": {
            "type": "string",
            "description": "Page ID to update"
          },
          "properties": {
            "type": "object",
            "description": "Updated properties"
          },
          "archived": {
            "type": "boolean",
            "description": "Archive/unarchive the page"
          }
        },
        "required": ["page_id"]
      },
      "required_params": ["page_id"]
    },
    {
      "name": "notion-move-pages",
      "description": "Move one or more Notion pages or databases to a new parent",
      "keywords": ["move", "relocate", "reorganize"],
      "parameters": {
        "type": "object",
        "properties": {
          "pages": {
            "type": "array",
            "description": "Array of page IDs to move"
          },
          "parent": {
            "type": "object",
            "description": "New parent page or database"
          }
        },
        "required": ["pages", "parent"]
      },
      "required_params": ["pages", "parent"]
    },
    {
      "name": "notion-duplicate-page",
      "description": "Duplicate a Notion page within your workspace (completes asynchronously)",
      "keywords": ["duplicate", "copy", "clone"],
      "parameters": {
        "type": "object",
        "properties": {
          "page_id": {
            "type": "string",
            "description": "Page ID to duplicate"
          }
        },
        "required": ["page_id"]
      },
      "required_params": ["page_id"]
    },
    {
      "name": "notion-create-database",
      "description": "Creates a new Notion database, initial data source, and initial view with specified properties",
      "keywords": ["create", "database", "data source", "new"],
      "parameters": {
        "type": "object",
        "properties": {
          "parent": {
            "type": "object",
            "description": "Parent page (requires page_id)"
          },
          "title": {
            "type": "array",
            "description": "Title for the database",
            "items": {"type": "object"}
          },
          "properties": {
            "type": "object",
            "description": "Schema/properties definition"
          }
        },
        "required": ["parent", "title", "properties"]
      },
      "required_params": ["parent", "title", "properties"]
    },
    {
      "name": "notion-update-data-source",
      "description": "Update a Notion data source's properties, name, description, or other attributes",
      "keywords": ["update", "edit", "data source", "database"],
      "parameters": {
        "type": "object",
        "properties": {
          "data_source_id": {
            "type": "string",
            "description": "Data source ID to update"
          },
          "properties": {
            "type": "object",
            "description": "Updated properties"
          }
        },
        "required": ["data_source_id"]
      },
      "required_params": ["data_source_id"]
    },
    {
      "name": "notion-query-data-sources",
      "description": "Query across multiple Notion data sources with structured summaries, grouping, and filters (requires Enterprise plan with Notion AI)",
      "keywords": ["query", "search", "filter", "data source"],
      "parameters": {
        "type": "object",
        "properties": {
          "data_sources": {
            "type": "array",
            "description": "Array of data source IDs to query"
          },
          "filter": {
            "type": "object",
            "description": "Filter conditions"
          },
          "sorts": {
            "type": "array",
            "description": "Sort configuration"
          }
        },
        "required": ["data_sources"]
      },
      "required_params": ["data_sources"]
    },
    {
      "name": "notion-query-database-view",
      "description": "Query data from a Notion database using a pre-defined view's filters and sorts (requires Business plan with Notion AI)",
      "keywords": ["query", "view", "database", "filter"],
      "parameters": {
        "type": "object",
        "properties": {
          "database_id": {
            "type": "string",
            "description": "Database ID"
          },
          "view_id": {
            "type": "string",
            "description": "View ID to use for filtering and sorting"
          }
        },
        "required": ["database_id", "view_id"]
      },
      "required_params": ["database_id", "view_id"]
    },
    {
      "name": "notion-create-comment",
      "description": "Add a comment to a page (block-level comments not yet supported)",
      "keywords": ["comment", "feedback", "note"],
      "parameters": {
        "type": "object",
        "properties": {
          "parent": {
            "type": "object",
            "description": "Parent page or discussion (requires page_id or discussion_id)"
          },
          "rich_text": {
            "type": "array",
            "description": "Comment text content",
            "items": {"type": "object"}
          }
        },
        "required": ["parent", "rich_text"]
      },
      "required_params": ["parent", "rich_text"]
    },
    {
      "name": "notion-get-comments",
      "description": "Lists all comments on a specific page, including threaded discussions",
      "keywords": ["list", "comments", "get", "feedback"],
      "parameters": {
        "type": "object",
        "properties": {
          "page_id": {
            "type": "string",
            "description": "Page ID to get comments from"
          }
        },
        "required": ["page_id"]
      },
      "required_params": ["page_id"]
    },
    {
      "name": "notion-get-teams",
      "description": "Retrieves a list of teams (teamspaces) in the current workspace",
      "keywords": ["teams", "teamspaces", "list"],
      "parameters": {
        "type": "object",
        "properties": {},
        "required": []
      },
      "required_params": []
    },
    {
      "name": "notion-get-users",
      "description": "Lists all users in the workspace with their details",
      "keywords": ["users", "list", "people"],
      "parameters": {
        "type": "object",
        "properties": {},
        "required": []
      },
      "required_params": []
    },
    {
      "name": "notion-get-user",
      "description": "Retrieve your user information by ID",
      "keywords": ["user", "get", "profile"],
      "parameters": {
        "type": "object",
        "properties": {
          "user_id": {
            "type": "string",
            "description": "User ID to retrieve"
          }
        },
        "required": ["user_id"]
      },
      "required_params": ["user_id"]
    },
    {
      "name": "notion-get-self",
      "description": "Retrieves information about your own bot user and the Notion workspace you're connected to",
      "keywords": ["self", "bot", "workspace", "info"],
      "parameters": {
        "type": "object",
        "properties": {},
        "required": []
      },
      "required_params": []
    }
  ]
}
