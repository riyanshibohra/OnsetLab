{
  "name": "Tavily",
  "service_id": "tavily",
  "description": "AI-powered web search and content extraction service with real-time search, crawling, and mapping capabilities",
  "source": "https://github.com/tavily-ai/tavily-mcp",
  "package": {
    "type": "npm",
    "name": "tavily-mcp",
    "command": "npx",
    "args": ["-y", "tavily-mcp@latest"]
  },
  "auth": {
    "type": "api_key",
    "env_vars": ["TAVILY_API_KEY"],
    "setup_url": "https://app.tavily.com/home",
    "setup_instructions": "Sign up for a free account at tavily.com and get your API key from the dashboard"
  },
  "toolsets": [
    {
      "id": "search",
      "name": "Web Search",
      "enabled_by_default": true,
      "keywords": ["search", "web", "query", "find", "google"]
    },
    {
      "id": "extract",
      "name": "Content Extraction",
      "enabled_by_default": true,
      "keywords": ["extract", "content", "scrape", "parse"]
    },
    {
      "id": "crawl",
      "name": "Web Crawling",
      "enabled_by_default": false,
      "keywords": ["crawl", "spider", "explore", "discover"]
    },
    {
      "id": "map",
      "name": "Site Mapping",
      "enabled_by_default": false,
      "keywords": ["map", "sitemap", "structure", "architecture"]
    }
  ],
  "tools": [
    {
      "name": "tavily_search",
      "description": "Perform AI-powered web search with comprehensive real-time results",
      "category": "search",
      "keywords": ["search", "web", "query", "find", "google", "news"],
      "parameters": {
        "query": {
          "type": "string",
          "description": "Search query",
          "required": true
        },
        "search_depth": {
          "type": "string",
          "description": "Search depth: 'basic' (generic), 'advanced' (thorough), 'fast' (low latency), 'ultra-fast' (prioritize speed)",
          "required": false,
          "enum": ["basic", "advanced", "fast", "ultra-fast"],
          "default": "basic"
        },
        "topic": {
          "type": "string",
          "description": "Search category: 'general' or 'news'",
          "required": false,
          "enum": ["general", "news"],
          "default": "general"
        },
        "days": {
          "type": "number",
          "description": "Days back from today to include (only for 'news' topic)",
          "required": false,
          "default": 3
        },
        "time_range": {
          "type": "string",
          "description": "Time range: 'day'/'d', 'week'/'w', 'month'/'m', 'year'/'y'",
          "required": false,
          "enum": ["day", "week", "month", "year", "d", "w", "m", "y"]
        },
        "start_date": {
          "type": "string",
          "description": "Start date for results (Format: YYYY-MM-DD)",
          "required": false
        },
        "end_date": {
          "type": "string",
          "description": "End date for results (Format: YYYY-MM-DD)",
          "required": false
        },
        "max_results": {
          "type": "number",
          "description": "Maximum search results (5-20)",
          "required": false,
          "default": 10,
          "minimum": 5,
          "maximum": 20
        },
        "include_images": {
          "type": "boolean",
          "description": "Include query-related images",
          "required": false,
          "default": false
        },
        "include_image_descriptions": {
          "type": "boolean",
          "description": "Include images with descriptions",
          "required": false,
          "default": false
        },
        "include_raw_content": {
          "type": "boolean",
          "description": "Include cleaned HTML content of results",
          "required": false,
          "default": false
        },
        "include_domains": {
          "type": "array",
          "description": "List of domains to specifically include",
          "required": false
        },
        "exclude_domains": {
          "type": "array",
          "description": "List of domains to exclude",
          "required": false
        },
        "country": {
          "type": "string",
          "description": "Boost results from specific country (lowercase, e.g., 'united states', 'canada')",
          "required": false
        },
        "include_favicon": {
          "type": "boolean",
          "description": "Include favicon URL for each result",
          "required": false,
          "default": false
        }
      },
      "required_params": ["query"]
    },
    {
      "name": "tavily_extract",
      "description": "Extract and process raw content from specified URLs",
      "category": "extract",
      "keywords": ["extract", "content", "scrape", "parse", "url"],
      "parameters": {
        "urls": {
          "type": "array",
          "description": "List of URLs to extract content from",
          "required": true
        },
        "extract_depth": {
          "type": "string",
          "description": "Extraction depth: 'basic' or 'advanced' (use 'advanced' for LinkedIn or complex sites)",
          "required": false,
          "enum": ["basic", "advanced"],
          "default": "basic"
        },
        "include_images": {
          "type": "boolean",
          "description": "Include images extracted from URLs",
          "required": false,
          "default": false
        },
        "format": {
          "type": "string",
          "description": "Output format: 'markdown' or 'text'",
          "required": false,
          "enum": ["markdown", "text"],
          "default": "markdown"
        },
        "include_favicon": {
          "type": "boolean",
          "description": "Include favicon URL for each result",
          "required": false,
          "default": false
        },
        "query": {
          "type": "string",
          "description": "User intent query for reranking extracted chunks by relevance",
          "required": false
        }
      },
      "required_params": ["urls"]
    },
    {
      "name": "tavily_crawl",
      "description": "Initiate structured web crawl from a base URL, following internal links like a graph",
      "category": "crawl",
      "keywords": ["crawl", "spider", "explore", "discover", "site"],
      "parameters": {
        "url": {
          "type": "string",
          "description": "Root URL to begin the crawl",
          "required": true
        },
        "max_depth": {
          "type": "number",
          "description": "Max depth from base URL (minimum 1)",
          "required": false,
          "default": 1,
          "minimum": 1
        },
        "max_breadth": {
          "type": "number",
          "description": "Max links to follow per page (minimum 1)",
          "required": false,
          "default": 20,
          "minimum": 1
        },
        "limit": {
          "type": "number",
          "description": "Total links to process before stopping (minimum 1)",
          "required": false,
          "default": 50,
          "minimum": 1
        },
        "instructions": {
          "type": "string",
          "description": "Natural language instructions for which types of pages to return",
          "required": false
        },
        "select_paths": {
          "type": "array",
          "description": "Regex patterns for URL path selection (e.g., '/docs/.*')",
          "required": false
        },
        "select_domains": {
          "type": "array",
          "description": "Regex patterns to restrict to specific domains/subdomains",
          "required": false
        },
        "allow_external": {
          "type": "boolean",
          "description": "Return external links in response",
          "required": false,
          "default": true
        },
        "extract_depth": {
          "type": "string",
          "description": "Extraction depth: 'basic' or 'advanced'",
          "required": false,
          "enum": ["basic", "advanced"],
          "default": "basic"
        },
        "format": {
          "type": "string",
          "description": "Content format: 'markdown' or 'text'",
          "required": false,
          "enum": ["markdown", "text"],
          "default": "markdown"
        },
        "include_favicon": {
          "type": "boolean",
          "description": "Include favicon URL for results",
          "required": false,
          "default": false
        }
      },
      "required_params": ["url"]
    },
    {
      "name": "tavily_map",
      "description": "Create structured map of website URLs to discover site structure and architecture",
      "category": "map",
      "keywords": ["map", "sitemap", "structure", "architecture", "urls"],
      "parameters": {
        "url": {
          "type": "string",
          "description": "Root URL to begin mapping",
          "required": true
        },
        "max_depth": {
          "type": "number",
          "description": "Max depth from base URL (minimum 1)",
          "required": false,
          "default": 1,
          "minimum": 1
        },
        "max_breadth": {
          "type": "number",
          "description": "Max links to follow per page (minimum 1)",
          "required": false,
          "default": 20,
          "minimum": 1
        },
        "limit": {
          "type": "number",
          "description": "Total links to process (minimum 1)",
          "required": false,
          "default": 50,
          "minimum": 1
        },
        "instructions": {
          "type": "string",
          "description": "Natural language instructions for the crawler",
          "required": false
        },
        "select_paths": {
          "type": "array",
          "description": "Regex patterns for URL path selection",
          "required": false
        },
        "select_domains": {
          "type": "array",
          "description": "Regex patterns for domain restriction",
          "required": false
        },
        "allow_external": {
          "type": "boolean",
          "description": "Return external links in response",
          "required": false,
          "default": true
        }
      },
      "required_params": ["url"]
    }
  ]
}
