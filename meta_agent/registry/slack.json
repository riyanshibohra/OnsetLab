{
  "name": "Slack",
  "service_id": "slack",
  "description": "Powerful Slack MCP server with support for channels, DMs, threads, search, and message posting",
  "source": "https://github.com/korotovsky/slack-mcp-server",
  "package": {
    "type": "binary",
    "name": "slack-mcp-server",
    "command": "npx",
    "args": ["-y", "slack-mcp-server", "--transport", "stdio"]
  },
  "auth": {
    "type": "token",
    "env_vars": ["SLACK_MCP_XOXP_TOKEN", "SLACK_MCP_ADD_MESSAGE_TOOL"],
    "setup_url": "https://api.slack.com/apps",
    "setup_instructions": "Use User OAuth token (xoxp-...), Bot token (xoxb-...), or Browser tokens (xoxc-... + xoxd-...). User OAuth recommended for full access.",
    "guide": {
      "steps": [
        "Go to https://api.slack.com/apps",
        "Click 'Create New App' â†’ 'From scratch'",
        "Name it (e.g., 'OnsetLab Agent') and select workspace",
        "Go to 'OAuth & Permissions' in sidebar",
        "Add Bot Token Scopes: channels:read, chat:write, users:read",
        "Click 'Install to Workspace' at top",
        "Authorize the app",
        "Copy 'Bot User OAuth Token' (starts with 'xoxb-')"
      ],
      "notes": "For full access, use User OAuth Token (xoxp-) instead of Bot Token. Bot tokens have limited permissions."
    }
  },
  "toolsets": [
    {
      "id": "messaging",
      "name": "Messaging",
      "enabled_by_default": true,
      "keywords": ["message", "post", "send", "add", "history"]
    },
    {
      "id": "threads",
      "name": "Thread Management",
      "enabled_by_default": true,
      "keywords": ["thread", "replies", "conversation"]
    },
    {
      "id": "search",
      "name": "Search",
      "enabled_by_default": true,
      "keywords": ["search", "find", "filter", "query"]
    },
    {
      "id": "channels",
      "name": "Channel Management",
      "enabled_by_default": true,
      "keywords": ["channel", "list", "dm", "group"]
    }
  ],
  "tools": [
    {
      "name": "conversations_history",
      "description": "Get messages from a channel or DM with smart pagination by date or count",
      "category": "messaging",
      "keywords": ["get", "history", "messages", "channel"],
      "parameters": {
        "channel_id": {
          "type": "string",
          "description": "Channel ID (e.g., 'C1234567890') or name with prefix (e.g., '#general', '@username_dm')",
          "required": true
        },
        "include_activity_messages": {
          "type": "boolean",
          "description": "Include activity messages like channel_join or channel_leave",
          "required": false,
          "default": false
        },
        "cursor": {
          "type": "string",
          "description": "Pagination cursor from previous response (next_cursor field)",
          "required": false
        },
        "limit": {
          "type": "string",
          "description": "Time range (e.g., '1d', '7d', '30d') or message count (e.g., '50'). Empty when using cursor.",
          "required": false,
          "default": "1d"
        }
      },
      "required_params": ["channel_id"]
    },
    {
      "name": "conversations_replies",
      "description": "Get all messages in a thread with pagination support",
      "category": "threads",
      "keywords": ["get", "thread", "replies", "conversation"],
      "parameters": {
        "channel_id": {
          "type": "string",
          "description": "Channel ID or name with prefix (e.g., '#general')",
          "required": true
        },
        "thread_ts": {
          "type": "string",
          "description": "Thread timestamp (e.g., '1234567890.123456')",
          "required": true
        },
        "include_activity_messages": {
          "type": "boolean",
          "description": "Include activity messages",
          "required": false,
          "default": false
        },
        "cursor": {
          "type": "string",
          "description": "Pagination cursor from previous response",
          "required": false
        },
        "limit": {
          "type": "string",
          "description": "Time range (e.g., '1d') or message count. Empty when using cursor.",
          "required": false,
          "default": "1d"
        }
      },
      "required_params": ["channel_id", "thread_ts"]
    },
    {
      "name": "conversations_add_message",
      "description": "Add a message to a channel or thread (disabled by default, enable via SLACK_MCP_ADD_MESSAGE_TOOL env var)",
      "category": "messaging",
      "keywords": ["add", "post", "send", "message"],
      "parameters": {
        "channel_id": {
          "type": "string",
          "description": "Channel ID or name with prefix (e.g., '#general')",
          "required": true
        },
        "thread_ts": {
          "type": "string",
          "description": "Thread timestamp to reply in thread (optional, if not provided posts to channel)",
          "required": false
        },
        "payload": {
          "type": "string",
          "description": "Message text in specified content_type format",
          "required": true
        },
        "content_type": {
          "type": "string",
          "description": "Content type of message",
          "required": false,
          "enum": ["text/markdown", "text/plain"],
          "default": "text/markdown"
        }
      },
      "required_params": ["channel_id", "payload"]
    },
    {
      "name": "conversations_search_messages",
      "description": "Search messages across channels, DMs, and threads with advanced filters",
      "category": "search",
      "keywords": ["search", "find", "filter", "query"],
      "parameters": {
        "search_query": {
          "type": "string",
          "description": "Search query text or Slack message URL",
          "required": false
        },
        "filter_in_channel": {
          "type": "string",
          "description": "Filter by channel ID or name (e.g., 'C1234567890' or '#general')",
          "required": false
        },
        "filter_in_im_or_mpim": {
          "type": "string",
          "description": "Filter by DM or MPIM ID or name (e.g., '@username_dm')",
          "required": false
        },
        "filter_users_with": {
          "type": "string",
          "description": "Filter messages with specific user by ID or @username",
          "required": false
        },
        "filter_users_from": {
          "type": "string",
          "description": "Filter messages from specific user by ID or @username",
          "required": false
        },
        "filter_date_before": {
          "type": "string",
          "description": "Messages before date (YYYY-MM-DD, 'July', 'Yesterday', 'Today')",
          "required": false
        },
        "filter_date_after": {
          "type": "string",
          "description": "Messages after date (YYYY-MM-DD format or relative)",
          "required": false
        },
        "filter_date_on": {
          "type": "string",
          "description": "Messages on specific date",
          "required": false
        },
        "filter_date_during": {
          "type": "string",
          "description": "Messages during period (e.g., 'July', 'Yesterday')",
          "required": false
        },
        "filter_threads_only": {
          "type": "boolean",
          "description": "Only include messages from threads",
          "required": false,
          "default": false
        },
        "cursor": {
          "type": "string",
          "description": "Pagination cursor",
          "required": false
        },
        "limit": {
          "type": "number",
          "description": "Maximum items to return (1-100)",
          "required": false,
          "default": 20
        }
      },
      "required_params": []
    },
    {
      "name": "channels_list",
      "description": "List all channels, DMs, and group DMs in the workspace",
      "category": "channels",
      "keywords": ["list", "channels", "dm", "group"],
      "parameters": {
        "channel_types": {
          "type": "string",
          "description": "Comma-separated channel types: 'mpim', 'im', 'public_channel', 'private_channel'",
          "required": true
        },
        "sort": {
          "type": "string",
          "description": "Sort by popularity (member count)",
          "required": false,
          "enum": ["popularity"]
        },
        "limit": {
          "type": "number",
          "description": "Maximum items to return (1-999)",
          "required": false,
          "default": 100
        },
        "cursor": {
          "type": "string",
          "description": "Pagination cursor from previous response",
          "required": false
        }
      },
      "required_params": ["channel_types"]
    }
  ]
}
