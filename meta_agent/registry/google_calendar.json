{
  "name": "Google Calendar",
  "service_id": "google_calendar",
  "description": "Google Calendar MCP server for managing calendars and events with OAuth 2.0 authentication",
  "source": "https://github.com/am2rican5/mcp-google-calendar",
  "package": {
    "type": "npm",
    "name": "mcp-google-calendar",
    "command": "npx",
    "args": ["-y", "mcp-google-calendar"]
  },
  "auth": {
    "type": "oauth",
    "env_vars": ["CREDENTIALS_PATH"],
    "setup_url": "https://console.cloud.google.com/",
    "setup_instructions": "Create OAuth 2.0 Desktop App credentials in Google Cloud Console with Google Calendar API enabled. Required scope: https://www.googleapis.com/auth/calendar.events",
    "guide": {
      "steps": [
        "Go to https://console.cloud.google.com/",
        "Create a new project or select existing",
        "Enable 'Google Calendar API' in APIs & Services",
        "Go to 'Credentials' → 'Create Credentials' → 'OAuth client ID'",
        "Select 'Desktop app' as application type",
        "Download the JSON credentials file",
        "Save as 'credentials.json' in your agent folder",
        "Set CREDENTIALS_PATH to the file location"
      ],
      "notes": "First run will open browser for OAuth consent. Tokens are cached after first auth."
    }
  },
  "toolsets": [
    {
      "id": "calendars",
      "name": "Calendar Management",
      "enabled_by_default": true,
      "keywords": ["calendar", "list", "manage"]
    },
    {
      "id": "events",
      "name": "Event Management",
      "enabled_by_default": true,
      "keywords": ["event", "meeting", "appointment", "schedule"]
    }
  ],
  "tools": [
    {
      "name": "list_calendars",
      "description": "List all available calendars in the user's account",
      "category": "calendars",
      "keywords": ["list", "calendars", "all"],
      "parameters": {
        "pageToken": {
          "type": "string",
          "description": "Token for pagination to retrieve next page of results",
          "required": false
        }
      },
      "required_params": []
    },
    {
      "name": "list_calendar_events",
      "description": "Get events from a specific calendar between specified dates",
      "category": "events",
      "keywords": ["list", "events", "get", "fetch", "between"],
      "parameters": {
        "calendarId": {
          "type": "string",
          "description": "Calendar ID (use 'primary' for user's primary calendar)",
          "required": true
        },
        "startsAt": {
          "type": "string",
          "description": "Start date for event search (Format: YYYY-MM-DD)",
          "required": true
        },
        "endsAt": {
          "type": "string",
          "description": "End date for event search (Format: YYYY-MM-DD)",
          "required": true
        },
        "pageToken": {
          "type": "string",
          "description": "Token for pagination",
          "required": false
        }
      },
      "required_params": ["calendarId", "startsAt", "endsAt"]
    },
    {
      "name": "create_calendar_event",
      "description": "Create a new event in a calendar",
      "category": "events",
      "keywords": ["create", "new", "event", "add", "schedule"],
      "parameters": {
        "calendarId": {
          "type": "string",
          "description": "Calendar ID where event will be created",
          "required": true
        },
        "event": {
          "type": "object",
          "description": "Event details",
          "required": true,
          "properties": {
            "summary": {
              "type": "string",
              "description": "Event title/summary",
              "required": true
            },
            "description": {
              "type": "string",
              "description": "Event description/details",
              "required": true
            },
            "start": {
              "type": "string",
              "description": "Event start date (Format: YYYY-MM-DD)",
              "required": true
            },
            "end": {
              "type": "string",
              "description": "Event end date (Format: YYYY-MM-DD)",
              "required": true
            },
            "anyoneCanAddSelf": {
              "type": "boolean",
              "description": "Whether anyone can add themselves to the event",
              "required": false
            },
            "colorId": {
              "type": "string",
              "description": "Color ID for the event",
              "required": false
            }
          }
        }
      },
      "required_params": ["calendarId", "event"]
    },
    {
      "name": "get_calendar_event",
      "description": "Get details for a specific calendar event",
      "category": "events",
      "keywords": ["get", "read", "event", "details"],
      "parameters": {
        "calendarId": {
          "type": "string",
          "description": "Calendar ID containing the event",
          "required": true
        },
        "eventId": {
          "type": "string",
          "description": "Event ID to retrieve",
          "required": true
        }
      },
      "required_params": ["calendarId", "eventId"]
    },
    {
      "name": "edit_calendar_event",
      "description": "Modify an existing calendar event",
      "category": "events",
      "keywords": ["edit", "update", "modify", "change", "event"],
      "parameters": {
        "calendarId": {
          "type": "string",
          "description": "Calendar ID containing the event",
          "required": true
        },
        "eventId": {
          "type": "string",
          "description": "Event ID to edit",
          "required": true
        },
        "event": {
          "type": "object",
          "description": "Updated event details",
          "required": true,
          "properties": {
            "summary": {
              "type": "string",
              "description": "Event title/summary",
              "required": true
            },
            "description": {
              "type": "string",
              "description": "Event description/details",
              "required": true
            },
            "start": {
              "type": "string",
              "description": "Event start date (Format: YYYY-MM-DD)",
              "required": true
            },
            "end": {
              "type": "string",
              "description": "Event end date (Format: YYYY-MM-DD)",
              "required": true
            },
            "anyoneCanAddSelf": {
              "type": "boolean",
              "description": "Whether anyone can add themselves to the event",
              "required": false
            },
            "colorId": {
              "type": "string",
              "description": "Color ID for the event",
              "required": false
            }
          }
        }
      },
      "required_params": ["calendarId", "eventId", "event"]
    },
    {
      "name": "delete_calendar_event",
      "description": "Remove an event from a calendar",
      "category": "events",
      "keywords": ["delete", "remove", "cancel", "event"],
      "parameters": {
        "calendarId": {
          "type": "string",
          "description": "Calendar ID containing the event",
          "required": true
        },
        "eventId": {
          "type": "string",
          "description": "Event ID to delete",
          "required": true
        }
      },
      "required_params": ["calendarId", "eventId"]
    }
  ]
}
