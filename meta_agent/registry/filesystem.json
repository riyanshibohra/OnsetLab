{
  "name": "File System",
  "service_id": "filesystem",
  "description": "Official filesystem MCP server for reading, writing, and managing files and directories with access control",
  "source": "https://github.com/modelcontextprotocol/servers/tree/main/src/filesystem",
  "package": {
    "type": "npm",
    "name": "@modelcontextprotocol/server-filesystem",
    "command": "npx",
    "args": ["-y", "@modelcontextprotocol/server-filesystem"]
  },
  "auth": {
    "type": "none",
    "env_vars": [],
    "setup_url": "",
    "setup_instructions": "Specify allowed directories as command-line arguments after the package name, e.g., npx -y @modelcontextprotocol/server-filesystem /path/to/dir1 /path/to/dir2"
  },
  "toolsets": [
    {
      "id": "read",
      "name": "File Reading",
      "enabled_by_default": true,
      "keywords": ["read", "get", "content", "file"]
    },
    {
      "id": "write",
      "name": "File Writing",
      "enabled_by_default": true,
      "keywords": ["write", "create", "save", "file"]
    },
    {
      "id": "directory",
      "name": "Directory Management",
      "enabled_by_default": true,
      "keywords": ["directory", "folder", "list", "create"]
    },
    {
      "id": "search",
      "name": "File Search",
      "enabled_by_default": true,
      "keywords": ["search", "find", "pattern", "glob"]
    },
    {
      "id": "operations",
      "name": "File Operations",
      "enabled_by_default": true,
      "keywords": ["move", "rename", "info", "metadata"]
    }
  ],
  "tools": [
    {
      "name": "read_text_file",
      "description": "Read complete contents of a text file (UTF-8)",
      "category": "read",
      "keywords": ["read", "file", "text", "content"],
      "parameters": {
        "path": {
          "type": "string",
          "description": "File path to read",
          "required": true
        },
        "head": {
          "type": "number",
          "description": "Read only first N lines (cannot use with tail)",
          "required": false
        },
        "tail": {
          "type": "number",
          "description": "Read only last N lines (cannot use with head)",
          "required": false
        }
      },
      "required_params": ["path"]
    },
    {
      "name": "write_file",
      "description": "Create new file or overwrite existing file with content",
      "category": "write",
      "keywords": ["write", "create", "save", "file"],
      "parameters": {
        "path": {
          "type": "string",
          "description": "File path to write",
          "required": true
        },
        "content": {
          "type": "string",
          "description": "File content to write",
          "required": true
        }
      },
      "required_params": ["path", "content"]
    },
    {
      "name": "edit_file",
      "description": "Make selective edits to a file using pattern matching with dry run preview support",
      "category": "write",
      "keywords": ["edit", "modify", "update", "replace", "file"],
      "parameters": {
        "path": {
          "type": "string",
          "description": "File path to edit",
          "required": true
        },
        "edits": {
          "type": "array",
          "description": "Array of edit operations (each with oldText and newText)",
          "required": true,
          "items": {
            "type": "object",
            "properties": {
              "oldText": {
                "type": "string",
                "description": "Text to search for (can be substring)"
              },
              "newText": {
                "type": "string",
                "description": "Text to replace with"
              }
            }
          }
        },
        "dryRun": {
          "type": "boolean",
          "description": "Preview changes without applying (default: false)",
          "required": false,
          "default": false
        }
      },
      "required_params": ["path", "edits"]
    },
    {
      "name": "create_directory",
      "description": "Create new directory or ensure it exists (creates parent directories if needed)",
      "category": "directory",
      "keywords": ["create", "mkdir", "directory", "folder"],
      "parameters": {
        "path": {
          "type": "string",
          "description": "Directory path to create",
          "required": true
        }
      },
      "required_params": ["path"]
    },
    {
      "name": "list_directory",
      "description": "List directory contents with [FILE] or [DIR] prefixes",
      "category": "directory",
      "keywords": ["list", "ls", "directory", "contents"],
      "parameters": {
        "path": {
          "type": "string",
          "description": "Directory path to list",
          "required": true
        }
      },
      "required_params": ["path"]
    },
    {
      "name": "search_files",
      "description": "Recursively search for files/directories matching glob patterns",
      "category": "search",
      "keywords": ["search", "find", "pattern", "glob"],
      "parameters": {
        "path": {
          "type": "string",
          "description": "Starting directory for search",
          "required": true
        },
        "pattern": {
          "type": "string",
          "description": "Glob-style search pattern (e.g., '*.js', 'test/**/*.py')",
          "required": true
        },
        "excludePatterns": {
          "type": "array",
          "description": "Array of glob patterns to exclude",
          "required": false
        }
      },
      "required_params": ["path", "pattern"]
    },
    {
      "name": "get_file_info",
      "description": "Get detailed file/directory metadata (size, timestamps, type, permissions)",
      "category": "operations",
      "keywords": ["info", "metadata", "stat", "details"],
      "parameters": {
        "path": {
          "type": "string",
          "description": "File or directory path",
          "required": true
        }
      },
      "required_params": ["path"]
    },
    {
      "name": "move_file",
      "description": "Move or rename files and directories (fails if destination exists)",
      "category": "operations",
      "keywords": ["move", "rename", "mv"],
      "parameters": {
        "source": {
          "type": "string",
          "description": "Source file/directory path",
          "required": true
        },
        "destination": {
          "type": "string",
          "description": "Destination path",
          "required": true
        }
      },
      "required_params": ["source", "destination"]
    }
  ]
}
