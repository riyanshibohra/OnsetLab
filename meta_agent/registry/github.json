{
  "name": "GitHub",
  "service_id": "github",
  "description": "Official GitHub MCP server for repository management, issues, pull requests, and code operations",
  "source": "https://github.com/github/github-mcp-server",
  "package": {
    "type": "docker",
    "image": "ghcr.io/github/github-mcp-server",
    "command": "docker",
    "args": ["run", "-i", "--rm", "-e", "GITHUB_PERSONAL_ACCESS_TOKEN", "ghcr.io/github/github-mcp-server"]
  },
  "auth": {
    "type": "token",
    "env_vars": ["GITHUB_PERSONAL_ACCESS_TOKEN"],
    "setup_url": "https://github.com/settings/tokens",
    "setup_instructions": "Create a Personal Access Token with 'repo' scope for full repository access",
    "guide": {
      "steps": [
        "Go to https://github.com/settings/tokens",
        "Click 'Generate new token' → 'Generate new token (classic)'",
        "Give it a name (e.g., 'OnsetLab Agent')",
        "Select expiration (recommend 90 days or custom)",
        "Select scopes: ✓ repo (full access)",
        "Click 'Generate token' at the bottom",
        "Copy the token immediately (starts with 'ghp_')",
        "Save it securely - you won't see it again!"
      ],
      "notes": "Never commit tokens to git. The token starts with 'ghp_'."
    }
  },
  "toolsets": [
    {
      "id": "context",
      "name": "User Context",
      "enabled_by_default": true,
      "keywords": ["me", "user", "profile", "team", "who"]
    },
    {
      "id": "repos",
      "name": "Repository Operations",
      "enabled_by_default": true,
      "keywords": ["repository", "repo", "file", "code", "branch", "commit"]
    },
    {
      "id": "issues",
      "name": "Issue Management",
      "enabled_by_default": true,
      "keywords": ["issue", "bug", "task", "ticket"]
    },
    {
      "id": "pull_requests",
      "name": "Pull Request Management",
      "enabled_by_default": true,
      "keywords": ["pr", "pull request", "merge", "review"]
    }
  ],
  "tools": [
    {
      "name": "get_me",
      "description": "Get my GitHub user profile",
      "category": "context",
      "keywords": ["me", "user", "profile", "who am i"],
      "parameters": {},
      "required_params": []
    },
    {
      "name": "search_repositories",
      "description": "Search for GitHub repositories using GitHub search syntax",
      "category": "repos",
      "keywords": ["search", "find", "repository", "repo"],
      "parameters": {
        "query": {
          "type": "string",
          "description": "Repository search query (e.g., 'user:octocat stars:>100', 'topic:react language:javascript')",
          "required": true
        },
        "sort": {
          "type": "string",
          "description": "Sort field",
          "required": false,
          "enum": ["stars", "forks", "updated", "help-wanted-issues"]
        },
        "order": {
          "type": "string",
          "description": "Sort order",
          "required": false,
          "enum": ["asc", "desc"]
        },
        "page": {
          "type": "number",
          "description": "Page number for pagination (min 1)",
          "required": false
        },
        "perPage": {
          "type": "number",
          "description": "Results per page (min 1, max 100)",
          "required": false
        },
        "minimal_output": {
          "type": "boolean",
          "description": "Return minimal repository information (default: true)",
          "required": false
        }
      },
      "required_params": ["query"]
    },
    {
      "name": "get_file_contents",
      "description": "Get contents of a file or directory from a repository",
      "category": "repos",
      "keywords": ["get", "read", "file", "content", "directory"],
      "parameters": {
        "owner": {
          "type": "string",
          "description": "Repository owner (username or organization)",
          "required": true
        },
        "repo": {
          "type": "string",
          "description": "Repository name",
          "required": true
        },
        "path": {
          "type": "string",
          "description": "Path to file or directory",
          "required": false
        },
        "ref": {
          "type": "string",
          "description": "Git reference (branch, tag, or commit SHA)",
          "required": false
        }
      },
      "required_params": ["owner", "repo"]
    },
    {
      "name": "create_repository",
      "description": "Create a new GitHub repository",
      "category": "repos",
      "keywords": ["create", "new", "repository", "repo"],
      "parameters": {
        "name": {
          "type": "string",
          "description": "Repository name",
          "required": true
        },
        "description": {
          "type": "string",
          "description": "Repository description",
          "required": false
        },
        "private": {
          "type": "boolean",
          "description": "Whether the repository should be private",
          "required": false
        },
        "autoInit": {
          "type": "boolean",
          "description": "Initialize repository with README",
          "required": false
        },
        "organization": {
          "type": "string",
          "description": "Organization to create repository in (omit for personal account)",
          "required": false
        }
      },
      "required_params": ["name"]
    },
    {
      "name": "fork_repository",
      "description": "Fork an existing repository",
      "category": "repos",
      "keywords": ["fork", "copy", "clone"],
      "parameters": {
        "owner": {
          "type": "string",
          "description": "Repository owner",
          "required": true
        },
        "repo": {
          "type": "string",
          "description": "Repository name",
          "required": true
        },
        "organization": {
          "type": "string",
          "description": "Organization to fork to",
          "required": false
        }
      },
      "required_params": ["owner", "repo"]
    },
    {
      "name": "create_branch",
      "description": "Create a new branch in a repository",
      "category": "repos",
      "keywords": ["create", "branch"],
      "parameters": {
        "owner": {
          "type": "string",
          "description": "Repository owner",
          "required": true
        },
        "repo": {
          "type": "string",
          "description": "Repository name",
          "required": true
        },
        "branch": {
          "type": "string",
          "description": "Name for new branch",
          "required": true
        },
        "from_branch": {
          "type": "string",
          "description": "Source branch (defaults to repo default)",
          "required": false
        }
      },
      "required_params": ["owner", "repo", "branch"]
    },
    {
      "name": "create_or_update_file",
      "description": "Create or update a file in a repository",
      "category": "repos",
      "keywords": ["create", "update", "file", "commit"],
      "parameters": {
        "owner": {
          "type": "string",
          "description": "Repository owner",
          "required": true
        },
        "repo": {
          "type": "string",
          "description": "Repository name",
          "required": true
        },
        "path": {
          "type": "string",
          "description": "File path",
          "required": true
