        "message": {
          "type": "string",
          "description": "Commit message",
          "required": true
        },
        "branch": {
          "type": "string",
          "description": "Branch to commit to",
          "required": true
        },
        "sha": {
          "type": "string",
          "description": "The blob SHA of the file being replaced (required for updates)",
          "required": false
        }
      },
      "required_params": ["owner", "repo", "path", "content", "message", "branch"]
    },
    {
      "name": "search_code",
      "description": "Search code across GitHub repositories",
      "category": "repos",
      "keywords": ["search", "find", "code", "function", "class"],
      "parameters": {
        "query": {
          "type": "string",
          "description": "Search query using GitHub code search syntax (e.g., 'addClass in:file language:js repo:owner/repo')",
          "required": true
        },
        "sort": {
          "type": "string",
          "description": "Sort field",
          "required": false,
          "enum": ["indexed"]
        },
        "order": {
          "type": "string",
          "description": "Sort order",
          "required": false,
          "enum": ["asc", "desc"]
        },
        "page": {
          "type": "number",
          "description": "Page number for pagination",
          "required": false
        },
        "perPage": {
          "type": "number",
          "description": "Results per page (min 1, max 100)",
          "required": false
        }
      },
      "required_params": ["query"]
    },
    {
      "name": "issue_write",
      "description": "Create or update an issue in a repository",
      "category": "issues",
      "keywords": ["create", "update", "issue"],
      "parameters": {
        "owner": {
          "type": "string",
          "description": "Repository owner",
          "required": true
        },
        "repo": {
          "type": "string",
          "description": "Repository name",
          "required": true
        },
        "method": {
          "type": "string",
          "description": "Write operation: 'create' to create a new issue, 'update' to update an existing issue",
          "required": true,
          "enum": ["create", "update"]
        },
        "title": {
          "type": "string",
          "description": "Issue title",
          "required": false
        },
        "body": {
          "type": "string",
          "description": "Issue body content",
          "required": false
        },
        "issue_number": {
          "type": "number",
          "description": "Issue number (required for 'update' method)",
          "required": false
        },
        "state": {
          "type": "string",
          "description": "Issue state",
          "required": false,
          "enum": ["open", "closed"]
        },
        "assignees": {
          "type": "array",
          "description": "Usernames to assign",
          "required": false
        },
        "labels": {
          "type": "array",
          "description": "Labels to apply",
          "required": false
        }
      },
      "required_params": ["owner", "repo", "method"]
    },
    {
      "name": "issue_read",
